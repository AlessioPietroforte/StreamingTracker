<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.example.applicazioneufficiale">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ApplicazioneUfficiale">
        <activity android:name=".charts.DetailsActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
        <activity android:name=".charts.SearchActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
        <activity
            android:name=".charts.ChartsActivity"
            android:theme="@style/Theme.ApplicazioneUfficiale.NoActionBar" />
        <activity
            android:name=".ui.series.SeriesActivity"
            android:theme="@style/Theme.ApplicazioneUfficiale.NoActionBar" />
        <activity
            android:name=".ui.film.FilmActivity"
            android:theme="@style/Theme.ApplicazioneUfficiale.NoActionBar" />
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/Theme.ApplicazioneUfficiale.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:noHistory="true"
            android:theme="@style/Theme.ApplicazioneUfficiale.NoActionBar" />
        <activity
            android:name=".RegistrationActivity"
            android:theme="@style/Theme.ApplicazioneUfficiale.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ApplicazioneUfficiale.NoActionBar" />
        <activity
            android:name=".ui.logout.LogoutActivity"
            android:theme="@style/Theme.ApplicazioneUfficiale.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>